  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Patryk Molenda",
      "email": "patryk.fr.molenda@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.2",
    "luminar-organization/core": "dev-main",
    "ext-pdo": "*"
